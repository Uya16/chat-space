.chat-main
  .chat-main__group-info
    .chat-main__group-info__box
      .chat-main__group-info__box__name
        = @group.name
      %ul.chat-main__group-info__box__member-list
        Member :
        - @group.users.each do |user|
          %li.chat-main__group-info__box__member-list
            = user.name
    .chat-main__group-info__edit-btn
      = link_to 'Edit', edit_group_path(@group.id)

  .chat-main__message-list
    = render @messages

  .chat-main__message-form
    .chat-main__message-form__new-message
      .chat-main__message-form__new-message__box
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'chat-main__message-form__new-message__box__text', placeholder: 'type a message'
        .chat-main__message-form__new-message__box__mask
          = f.label :image, class: 'chat-main__message-form__new-message__box__mask__image' do
            = icon('far', 'image', class: 'chat-main__message-form__new-message__box__mask__image__icon')
            = f.file_field :image, class: 'chat-main__message-form__new-message__box__mask__image__file'
        = f.submit 'Send', class: 'chat-main__message-form__new-message__box__send-btn'