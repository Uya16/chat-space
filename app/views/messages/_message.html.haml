.message-list{data: {message: {id: message.id}}}
  .message-list__box
    .message-list__box__info
      .message-list__box__info__user
        = message.user.name
      .message-list__box__info__date
        = message. created_at.strftime("%Y年%m月%d日 %H時%M分")
    .message-list__box__text
      - if message.content.present?
        %p.message-list__box__text__content
          = message.content
      =image_tag message.image.url, class: 'message-list__box__text__image' if message.image.present?